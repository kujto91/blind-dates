<tr>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.descripton %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.phone %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.address_street %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.address_number %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.address_postcode %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restorant.address_town %></td>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= link_to 'Edit', edit_restorant_path(restorant), class: "text-blue-600 hover:text-blue-900" %>
    </td>
  <% end %>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= button_to 'Destroy', restorant, class: "text-blue-600 hover:text-blue-900", method: :delete %>
    </td>
  <% end %>
</tr>
