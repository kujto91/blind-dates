<tr>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group.week %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group.leader.try(:name) %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group.participant_names%></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group.restorant.try(:name) %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group.group_invitations.size %></td>

  <% if current_user.admin? || current_user == group.leader %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= link_to 'Edit', edit_group_path(group), class: "text-blue-600 hover:text-blue-900" %>
    </td>
  <% end %>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= button_to 'Destroy', group, class: "text-blue-600 hover:text-blue-900", method: :delete %>
    </td>
  <% end %>
</tr>
