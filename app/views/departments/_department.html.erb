<tr>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= department.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= department.descripton %></td>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= link_to 'Edit', edit_department_path(department), class: "text-blue-600 hover:text-blue-900" %>
    </td>
  <% end %>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= button_to 'Destroy', department, class: "text-blue-600 hover:text-blue-900", method: :delete %>
    </td>
  <% end %>
</tr>
