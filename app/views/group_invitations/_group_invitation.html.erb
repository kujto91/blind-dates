<tr>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group_invitation.id %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group_invitation.user.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group_invitation.group.week %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group_invitation.leader %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= group_invitation.confirmed_at %></td>

  <% if (current_user.admin? || current_user == group_invitation.user) && !group_invitation.confirmed? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= link_to 'Edit', edit_group_invitation_path(group_invitation), class: "text-blue-600 hover:text-blue-900" %>
    </td>
  <% end %>

  <% if current_user.admin? %>
    <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
      <%= button_to 'Destroy', group_invitation, class: "text-blue-600 hover:text-blue-900", method: :delete %>
    </td>
  <% end %>
</tr>
